package com.cmpe.assignment1;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

@SpringBootApplication
@RestController
public class JaaiJoshiAssignment1IntegrationApplication {

    public static void main(String[] args){
        SpringApplication.run(JaaiJoshiAssignment1IntegrationApplication.class, args);
    }

    @Bean
    public RestTemplate restTemplate() {
        return new RestTemplate();
    }

    @GetMapping("/integrated")
    public String integratedMessage() {
        RestTemplate restTemplate=restTemplate();
        String hello=restTemplate.getForObject("http://127.0.0.1:61140/hello", String.class);
        String world=restTemplate.getForObject("http://127.0.0.1:61106/world", String.class);

        return hello+" "+world;
    }
}